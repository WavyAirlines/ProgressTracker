@model IEnumerable<ProgressTracker.Models.Movement>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Movements</h1>

<p>
    <a asp-action="Create" class="text-center">Add Movement</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reps)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reps)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MovementId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MovementId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MovementId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
